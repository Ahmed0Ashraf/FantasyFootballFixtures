<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.PlayerStatsActivity">

    <View
            android:id="@+id/divider9"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="@android:color/black"
            app:layout_constraintBottom_toTopOf="@+id/guideline51"
            app:layout_constraintStart_toEndOf="@+id/statsPlayerPrice"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toStartOf="@+id/statsPlayerGWPoints"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline50"/>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/statsPlayerName"
            app:layout_constraintStart_toEndOf="@+id/statsPlayerImage"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/statsPlayerImage"/>
    <ImageView
            android:layout_width="76dp"
            android:layout_height="81dp" app:srcCompat="@drawable/default_shirt"
            android:id="@+id/statsPlayerImage"
            android:scaleType="fitCenter" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintBottom_toTopOf="@+id/guideline51"
            app:layout_constraintTop_toTopOf="@+id/guideline50"/>
    <TextView
            android:text="LIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/statsPlayerTeam" app:layout_constraintStart_toEndOf="@+id/statsPlayerImage"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline51"/>
    <TextView
            android:text="GK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/statsPlayerPosition"
            app:layout_constraintStart_toEndOf="@+id/statsPlayerImage"
            android:layout_marginStart="16dp" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/statsPlayerTeam" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/statsPlayerName"/>
    <TextView
            android:text="Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView545454"
            app:layout_constraintBottom_toTopOf="@+id/statsPlayerPrice"
            app:layout_constraintStart_toStartOf="@+id/guideline52" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline53" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="$ 6.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/statsPlayerPrice"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView22"
            app:layout_constraintStart_toStartOf="@+id/guideline52" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline53" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="GW#"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/statsPlayerGWPoints"
            app:layout_constraintStart_toStartOf="@+id/guideline53" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="0 pts."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/statsPlayerGWPoints"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView24" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline53"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView22"
            app:layout_constraintBottom_toTopOf="@+id/statsPlayerTotalPoints"
            app:layout_constraintStart_toStartOf="@+id/guideline52" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline53" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="161 pts."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/statsPlayerTotalPoints"
            app:layout_constraintBottom_toTopOf="@+id/guideline51" app:layout_constraintEnd_toStartOf="@+id/guideline53"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline52"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="TSB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView24"
            app:layout_constraintBottom_toTopOf="@+id/statsPlayerTeamSelectedBy"
            app:layout_constraintStart_toStartOf="@+id/guideline53" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="10%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/statsPlayerTeamSelectedBy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline51"
            app:layout_constraintStart_toStartOf="@+id/guideline53" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline51" app:layout_constraintGuide_begin="124dp"
                                          android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline52"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.6"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline53"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.8"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline50" app:layout_constraintGuide_begin="42dp"
                                          android:orientation="horizontal"/>
    <View
            android:id="@+id/divider8"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline52"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline50" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline51"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline55"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.4"/>
    <Button
            android:text="History"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/historyBtn"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline55"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/guideline51"/>
    <Button
            android:text="GW Fixtures"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/FixturesBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="@+id/guideline52" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/guideline51"/>


    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/historyBtn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:fillViewport="true">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/historyBtn" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:id="@+id/statsContainer"
        >
        </FrameLayout>
    </ScrollView>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/playerStatsStatus" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline50" android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:background="@color/colorAccent" tools:visibility="visible" android:visibility="invisible"/>
</android.support.constraint.ConstraintLayout>