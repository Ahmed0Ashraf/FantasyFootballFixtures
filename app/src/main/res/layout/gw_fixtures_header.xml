<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:background="#64000000">

    <TextView
            android:text="Difficulty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/guideline58"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="@android:color/background_dark"/>
    <TextView
            android:text="Date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView17" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline56"
            android:layout_marginStart="8dp" android:textColor="@android:color/background_dark"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="textStart"/>
    <TextView
            android:text="Round"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            app:layout_constraintStart_toStartOf="@+id/guideline56"
            app:layout_constraintEnd_toStartOf="@+id/guideline57"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textAlignment="center"
            android:textColor="@android:color/background_dark"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline56"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.35"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline57"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.5"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline58"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.75"/>
    <TextView
            android:text="Opponent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView19" app:layout_constraintStart_toStartOf="@+id/guideline57"
            app:layout_constraintEnd_toStartOf="@+id/guideline58"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textAlignment="center"
            android:textColor="@android:color/background_dark"/>
</android.support.constraint.ConstraintLayout>