<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline59"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.35"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline60"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.5"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline61"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.75"/>
    <TextView
            android:text="Sat 10 Aug 16:00"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dateTextView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline59"
            android:textAlignment="viewStart" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/roundTextView" app:layout_constraintStart_toStartOf="@+id/guideline59"
            app:layout_constraintEnd_toStartOf="@+id/guideline60"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textAlignment="center"/>
    <TextView
            android:text="CRY (A)"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/opponentTextView" app:layout_constraintStart_toStartOf="@+id/guideline60"
            app:layout_constraintEnd_toStartOf="@+id/guideline61"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textAlignment="center"/>
    <TextView
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/difficultyTextView" app:layout_constraintStart_toStartOf="@+id/guideline61"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent" android:gravity="center"
            android:background="@android:color/holo_red_dark"/>
</android.support.constraint.ConstraintLayout>